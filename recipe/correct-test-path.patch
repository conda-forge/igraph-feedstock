-    SET_TESTS_PROPERTIES(${TEST_NAME} PROPERTIES ENVIRONMENT "PATH=${IGRAPH_LIBDIR}\;${CORRECT_PATH}" )
+    MESSAGE(STATUS "TEST_CORRECT_PATHS: ${TEST_CORRECT_PATHS}")
+    SET_TESTS_PROPERTIES(${TEST_NAME} PROPERTIES ENVIRONMENT "PATH=${TEST_CORRECT_PATHS}" )
   endif()
